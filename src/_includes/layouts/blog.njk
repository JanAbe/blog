{% extends "layouts/base.njk" %}
{% block content %}
  <article>
    <div class="hero">
      <div class="title-wrapper">
        <div class="text">
          <h1>{{ title }}</h1>
        </div>
      </div>

      <img src="/images/wave.svg" class="wave" />
    </div>
    <div class="content">
      <p>Posted on: {{ page.date | dutchDateFormat }}</p>
      <div class="tags">
        {% for tag in tags %}
          <span class="tag">{{tag}}</span>
        {% endfor %}
      </div>
      {{ content | safe }}
    </div>
  </article>
{% endblock %}